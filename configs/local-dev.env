# Development environment configuration for insights-ros-ingress
# This file is sourced by the setup-dev-auth.sh script and used for local development

# Kubernetes configuration
KUBECONFIG=/tmp/dev-kubeconfig

# Development authentication token (set by setup-dev-auth.sh)
# DEV_SERVICE_ACCOUNT_TOKEN will be populated by the setup script

# Server configuration
SERVER_PORT=8080
SERVER_READ_TIMEOUT=60
SERVER_WRITE_TIMEOUT=60
SERVER_IDLE_TIMEOUT=120
LOG_LEVEL=debug
LOG_FORMAT=text

# Development storage (MinIO from docker-compose)
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin123
STORAGE_BUCKET=insights-ros-data
STORAGE_USE_SSL=false
STORAGE_PATH_PREFIX=ros
STORAGE_URL_EXPIRATION=3600

# Development message queue (Kafka from docker-compose)
KAFKA_BROKERS=localhost:9092
KAFKA_ROS_TOPIC=hccm.ros.events
KAFKA_CLIENT_ID=insights-ros-ingress-dev
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_RETRIES=3
KAFKA_BATCH_SIZE=16384

# Upload configuration
MAX_UPLOAD_SIZE=104857600
MAX_MEMORY=33554432
TEMP_DIR=/tmp
ALLOWED_TYPES=application/vnd.redhat.hccm.upload
REQUIRE_AUTH=true

# Development database (optional PostgreSQL from docker-compose)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=insights_ros
DATABASE_USER=insights
DATABASE_PASSWORD=insights123
DATABASE_SSL_MODE=disable

# Authentication configuration
AUTH_ENABLED=true

# Metrics configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Health check configuration
HEALTH_CHECK_INTERVAL=30

