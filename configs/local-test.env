# Local test configuration for insights-ros-ingress
# Use this configuration when testing with docker-compose services

# Service configuration
LOG_LEVEL=debug
SERVER_PORT=8080
SERVER_READ_TIMEOUT=60
SERVER_WRITE_TIMEOUT=60
SERVER_IDLE_TIMEOUT=120

# Storage configuration (MinIO from docker-compose)
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin123
STORAGE_BUCKET=insights-ros-data
STORAGE_USE_SSL=false
STORAGE_REGION=us-east-1
STORAGE_PATH_PREFIX=ros
STORAGE_URL_EXPIRATION=3600

# Kafka configuration (from docker-compose)
KAFKA_BROKERS=localhost:9092
KAFKA_ROS_TOPIC=hccm.ros.events
KAFKA_CLIENT_ID=insights-ros-ingress-local
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_RETRIES=3
KAFKA_BATCH_SIZE=16384

# Authentication (disabled for testing)
AUTH_ENABLED=false

# Metrics configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Health check configuration
HEALTH_CHECK_INTERVAL=30